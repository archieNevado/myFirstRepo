<?xml version="1.0" encoding="UTF-8"?>
<editor:PropertyFieldGroup
        xmlns:fx="http://ns.adobe.com/mxml/2009"
        xmlns:exml="http://www.jangaroo.net/exml/0.8"
        xmlns="exml:ext.config"
        xmlns:editor="exml:com.coremedia.cms.editor.sdk.config"
        xmlns:bpb-components="exml:com.coremedia.blueprint.base.components.config"
        xmlns:ui="exml:com.coremedia.ui.config"
        xmlns:bpforms="exml:com.coremedia.blueprint.studio.config"
        title="{resourceManager.getString('com.coremedia.blueprint.studio.CustomLabels', 'PropertyGroup_Authors_label')}"
        itemId="authorLinkListDocumentForm"
        collapsed="true">
  <fx:Metadata>
    [ResourceBundle('com.coremedia.blueprint.studio.CustomLabels')]
  </fx:Metadata>
  <fx:Script><![CDATA[
    public static const xtype:String = "com.coremedia.blueprint.studio.config.authorLinkListDocumentForm";

    private var config:AuthorLinkListDocumentForm;

    public native function AuthorLinkListDocumentForm(config:AuthorLinkListDocumentForm = null);
    ]]></fx:Script>
  <fx:Declarations>

    <!---
     The content property name of the list to bind the newly created content to.
     Defaults to authors.
    -->
    <fx:String id="authorPropertyName">authors</fx:String>

    <!---
     The content types for the QuickCreate menu.
     Defaults to CMPerson.
    -->
    <fx:String id="quickCreateTypes">CMPerson</fx:String>
  </fx:Declarations>

  <editor:items>
    <editor:LinkListPropertyField propertyName="authors"
                                  hideLabel="true"
                                  showThumbnails="true">
      <editor:additionalToolbarItems>
        <TbSeparator/>
        <bpb-components:QuickCreateLinklistMenu bindTo="{config.bindTo}"
                                                propertyName="{config.authorPropertyName}"
                                                contentTypes="{config.quickCreateTypes}"/>
      </editor:additionalToolbarItems>
      <editor:fields>
        <ui:DataField name="{ValidityColumn.STATUS_ID}"
                      ifUnreadable=""
                      mapping=""
                      convert_="{ValidityColumn.convert}"/>
      </editor:fields>
      <editor:columns>
        <editor:ThumbnailColumn/>
        <editor:TypeIconColumn/>
        <editor:NameColumn flex="1"/>
        <bpforms:ValidityColumn/>
        <editor:StatusColumn/>
      </editor:columns>
    </editor:LinkListPropertyField>
  </editor:items>

</editor:PropertyFieldGroup>
