<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>com.coremedia.blueprint</groupId>
    <artifactId>lc</artifactId>
    <version>1-SNAPSHOT</version>
  </parent>

  <artifactId>lc-studio</artifactId>
  <packaging>swc</packaging>

  <properties>
    <coremedia.project.extension.for>studio</coremedia.project.extension.for>
    <sprites.name>lc-studio-icons</sprites.name>
  </properties>

  <dependencies>
    <dependency>
      <groupId>com.coremedia.blueprint.base</groupId>
      <artifactId>bpbase-studio-components</artifactId>
      <type>swc</type>
    </dependency>
    <dependency>
      <groupId>com.coremedia.blueprint.base</groupId>
      <artifactId>bpbase-pagegrid-studio-plugin</artifactId>
      <type>swc</type>
    </dependency>
    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>ec-studio-model</artifactId>
      <version>${project.version}</version>
      <type>swc</type>
    </dependency>
    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>ec-studio</artifactId>
      <version>${project.version}</version>
      <type>swc</type>
    </dependency>
    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>ec-studio-test-helper</artifactId>
      <version>${project.version}</version>
      <type>swc</type>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>blueprint-forms</artifactId>
      <version>${project.version}</version>
      <type>swc</type>
    </dependency>
    <dependency>
      <groupId>com.coremedia.ui.toolkit</groupId>
      <artifactId>core-icons</artifactId>
      <type>swc</type>
    </dependency>
    <dependency>
      <groupId>com.coremedia.ui.toolkit</groupId>
      <artifactId>ui-components</artifactId>
      <type>swc</type>
    </dependency>
    <dependency>
      <groupId>com.coremedia.ui.sdk</groupId>
      <artifactId>editor-components</artifactId>
      <type>swc</type>
    </dependency>
    <dependency>
      <groupId>com.coremedia.ui.sdk</groupId>
      <artifactId>cap-rest-client</artifactId>
      <type>swc</type>
    </dependency>
    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>lc-studio-test-helper</artifactId>
      <version>${project.version}</version>
      <type>swc</type>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>com.coremedia.ui.toolkit</groupId>
      <artifactId>client-core-test-helper</artifactId>
      <type>swc</type>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>net.jangaroo</groupId>
      <artifactId>joounit</artifactId>
      <type>swc</type>
      <scope>test</scope>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>net.jangaroo</groupId>
        <artifactId>jangaroo-maven-plugin</artifactId>
        <version>${jangaroo.version}</version> <!-- explicit version for IDEA! -->
        <extensions>true</extensions>
        <configuration>
          <testSuite>com.coremedia.livecontext.studio.TestSuite</testSuite>
          <jooUnitTestExecutionTimeout>120000</jooUnitTestExecutionTimeout>
          <namespaces>
            <namespace>
              <uri>exml:com.coremedia.livecontext.studio.config</uri>
            </namespace>
          </namespaces>
        </configuration>
      </plugin>

      <plugin>
        <groupId>net.jangaroo</groupId>
        <artifactId>smartsprites-maven-plugin</artifactId>
        <configuration>
          <rootDirPath>src/main/sprites</rootDirPath>
          <outputDirPath>target/generated-resources/META-INF/resources/joo/resources/css/icons</outputDirPath>
        </configuration>
        <executions>
          <execution>
            <id>createSprites</id>
            <phase>generate-resources</phase>
            <goals>
              <goal>createSprites</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.primefaces.extensions</groupId>
        <artifactId>resources-optimizer-maven-plugin</artifactId>
        <executions>
          <execution>
            <id>optimize</id>
            <phase>generate-resources</phase>
            <goals>
              <goal>optimize</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <compilationLevel>ADVANCED_OPTIMIZATIONS</compilationLevel>
          <warningLevel>VERBOSE</warningLevel>
          <failOnWarning>true</failOnWarning>
          <resourcesSets>
            <resourcesSet>
              <inputDir>target/generated-resources/META-INF/resources/joo/resources/css/icons</inputDir>
              <includes>
                <include>**/*.css</include>
              </includes>
              <aggregations>
                <aggregation>
                  <prependedFile>src/main/prepend/prepend.css</prependedFile>
                  <removeIncluded>true</removeIncluded>
                  <withoutCompress>false</withoutCompress>
                  <outputFile>target/generated-resources/META-INF/resources/joo/resources/css/icons/${sprites.name}.css</outputFile>
                </aggregation>
              </aggregations>
            </resourcesSet>
          </resourcesSets>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
