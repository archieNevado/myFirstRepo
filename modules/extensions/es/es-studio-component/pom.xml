  <build>
    <plugins>
      <plugin>
        <!-- Workaround MDEP-594: The dependency is used but usages of type annotations are not correctly detected -->
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-dependency-plugin</artifactId>
        <executions>
          <execution>
            <id>default-cli</id>
            <configuration>
              <ignoredUnusedDeclaredDependencies combine.children="append">
                <ignoredUnusedDeclaredDependency>com.coremedia.cms:coremedia-personal-data</ignoredUnusedDeclaredDependency>
              </ignoredUnusedDeclaredDependencies>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
