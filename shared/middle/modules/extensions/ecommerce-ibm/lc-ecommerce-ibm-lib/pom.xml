  <profiles>
    <profile>
      <id>integration-test</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-failsafe-plugin</artifactId>
            <configuration>
              <redirectTestOutputToFile>true</redirectTestOutputToFile>
              <!-- override default security settings (if possible) -->
              <argLine>-Djava.security.properties=${project.build.testOutputDirectory}/java.security</argLine>
            </configuration>
            <executions>
              <execution>
                <goals>
                  <goal>integration-test</goal>
                  <goal>verify</goal>
                </goals>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>

    <profile>
      <id>remote-tests</id>
      <properties>
        <skip-unit-tests>true</skip-unit-tests>
        <wcs.host />
        <wcs.version />
      </properties>
      <build>
        <plugins>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-failsafe-plugin</artifactId>
            <configuration>
              <skipTests>${skip-ibm-tests}</skipTests>
              <skipITs>false</skipITs>
              <redirectTestOutputToFile>true</redirectTestOutputToFile>
              <!-- override default security settings (if possible) -->
              <argLine>-Djava.security.properties=${project.build.testOutputDirectory}/java.security</argLine>
              <systemPropertyVariables>
                <hoverfly.ignoreTapes>true</hoverfly.ignoreTapes>
                <livecontext.ibm.wcs.host>${wcs.host}</livecontext.ibm.wcs.host>
                <livecontext.ibm.wcs.url>http://${wcs.host}</livecontext.ibm.wcs.url>
                <livecontext.ibm.wcs.secureUrl>https://${wcs.host}</livecontext.ibm.wcs.secureUrl>
                <livecontext.ibm.wcs.version>${wcs.version}</livecontext.ibm.wcs.version>
                <livecontext.apache.wcs.url>http://shop-preview-production-helios.${wcs.host}</livecontext.apache.wcs.url>
              </systemPropertyVariables>
            </configuration>
            <executions>
              <execution>
                <goals>
                  <goal>integration-test</goal>
                  <goal>verify</goal>
                </goals>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
