<?xml version="1.0" encoding="UTF-8"?>
<ui:NestedRulesPlugin
        xmlns:fx="http://ns.adobe.com/mxml/2009"
        xmlns:exml="http://www.jangaroo.net/exml/0.8"
        xmlns="exml:ext.config"
        xmlns:ui="exml:com.coremedia.ui.config"
        xmlns:ec="exml:com.coremedia.ecommerce.studio.config"
        xmlns:editor="exml:com.coremedia.cms.editor.sdk.config"
        xmlns:asset="exml:com.coremedia.livecontext.asset.studio.config">
  <fx:Script><![CDATA[
    import com.coremedia.cms.editor.sdk.collectionview.ICollectionView;
    import com.coremedia.livecontext.asset.studio.LivecontextAssetStudioPlugin;
    import com.coremedia.livecontext.studio.LivecontextStudioPlugin;

    private var config:LivecontextAssetLibraryPlugin;
    private var selectionHolder:ICollectionView;

    public native function LivecontextAssetLibraryPlugin(config:LivecontextAssetLibraryPlugin = null);
    ]]></fx:Script>
  <fx:Declarations>
    <fx:Object id="selectionHolder">{config.cmp as ICollectionView}</fx:Object>
  </fx:Declarations>


  <ui:rules>

    <!--Add Search Product Pictures Action -->
    <ec:CatalogSearchToolbar>
      <ec:plugins>
        <ui:AddItemsPlugin>
          <ui:items>
            <ui:IconButton itemId="{LivecontextAssetStudioPlugin.SEARCH_PRODUCT_PICTURES_BUTTON_ITEM_ID}">
              <ui:baseAction>
                <asset:SearchProductPicturesAction
                        catalogObjectExpression="{selectionHolder.getSelectedSearchItemsValueExpression()}"/>
              </ui:baseAction>
            </ui:IconButton>
          </ui:items>
          <ui:after>
            <Component itemId="{LivecontextStudioPlugin.SEARCH_PRODUCT_VARIANTS_BUTTON_ITEM_ID}"/>
          </ui:after>
        </ui:AddItemsPlugin>
      </ec:plugins>
    </ec:CatalogSearchToolbar>

    <ec:CatalogRepositoryContextMenu>
      <ec:plugins>
        <ui:AddItemsPlugin>
          <ui:items>
            <MenuItem itemId="{LivecontextAssetStudioPlugin.SEARCH_PRODUCT_PICTURES_MENU_ITEM_ID}">
              <baseAction>
                <asset:SearchProductPicturesAction
                        catalogObjectExpression="{selectionHolder.getSelectedRepositoryItemsValueExpression()}"/>
              </baseAction>
            </MenuItem>
          </ui:items>
          <ui:after>
            <Component itemId="{LivecontextStudioPlugin.SEARCH_PRODUCT_VARIANTS_MENU_ITEM_ID}"/>
          </ui:after>
        </ui:AddItemsPlugin>
      </ec:plugins>
    </ec:CatalogRepositoryContextMenu>

    <ec:CatalogSearchContextMenu>
      <ec:plugins>
        <ui:AddItemsPlugin>
          <ui:items>
            <MenuItem itemId="{LivecontextAssetStudioPlugin.SEARCH_PRODUCT_PICTURES_MENU_ITEM_ID}">
              <baseAction>
                <asset:SearchProductPicturesAction
                        catalogObjectExpression="{selectionHolder.getSelectedSearchItemsValueExpression()}"/>
              </baseAction>
            </MenuItem>
          </ui:items>
          <ui:after>
            <Component itemId="{LivecontextStudioPlugin.SEARCH_PRODUCT_VARIANTS_MENU_ITEM_ID}"/>
          </ui:after>
        </ui:AddItemsPlugin>
      </ec:plugins>
    </ec:CatalogSearchContextMenu>

    <ec:CatalogRepositoryToolbar>
      <ec:plugins>
        <ui:AddItemsPlugin>
          <ui:items>
            <ui:IconButton itemId="{LivecontextAssetStudioPlugin.SEARCH_PRODUCT_PICTURES_BUTTON_ITEM_ID}">
              <ui:baseAction>
                <asset:SearchProductPicturesAction
                        catalogObjectExpression="{selectionHolder.getSelectedRepositoryItemsValueExpression()}"/>
              </ui:baseAction>
            </ui:IconButton>
          </ui:items>
          <ui:after>
            <Component itemId="{LivecontextStudioPlugin.SEARCH_PRODUCT_VARIANTS_BUTTON_ITEM_ID}"/>
          </ui:after>
        </ui:AddItemsPlugin>
      </ec:plugins>
    </ec:CatalogRepositoryToolbar>

    <editor:TreeViewContextMenu>
      <editor:plugins>
        <ui:AddItemsPlugin>
          <ui:items>
            <MenuItem itemId="{LivecontextAssetStudioPlugin.SEARCH_PRODUCT_PICTURES_MENU_ITEM_ID}">
              <baseAction>
                <asset:SearchProductPicturesAction
                        catalogObjectExpression="{selectionHolder.getSelectedFolderValueExpression()}"/>
              </baseAction>
            </MenuItem>
          </ui:items>
          <ui:after>
            <Component itemId="{LivecontextStudioPlugin.SEARCH_PRODUCT_VARIANTS_MENU_ITEM_ID}"/>
          </ui:after>

        </ui:AddItemsPlugin>
      </editor:plugins>
    </editor:TreeViewContextMenu>


  </ui:rules>

</ui:NestedRulesPlugin>
