<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>com.coremedia.blueprint</groupId>
    <artifactId>studio-client.studio</artifactId>
    <version>1-SNAPSHOT</version>
  </parent>

  <artifactId>studio-base-app</artifactId>
  <packaging>jangaroo-app</packaging>

  <properties>
    <studio-base-app.senchaJvmArgs>-Xms512m -Xmx2048m</studio-base-app.senchaJvmArgs>
  </properties>

  <dependencies>
    <dependency>
      <groupId>net.jangaroo</groupId>
      <artifactId>jangaroo-runtime</artifactId>
      <type>swc</type>
      <scope>runtime</scope>
    </dependency>

    <dependency>
      <groupId>com.coremedia.ui.collaboration</groupId>
      <artifactId>control-room-editor-components</artifactId>
      <type>swc</type>
      <scope>runtime</scope>
    </dependency>

    <dependency>
      <groupId>com.coremedia.ui.sdk</groupId>
      <artifactId>editor-components</artifactId>
      <type>swc</type>
      <scope>runtime</scope>
    </dependency>

    <dependency>
      <groupId>com.coremedia.ui.sdk</groupId>
      <artifactId>image-map-editor-components</artifactId>
      <type>swc</type>
      <scope>runtime</scope>
    </dependency>

    <dependency>
      <groupId>com.coremedia.ui.sdk</groupId>
      <artifactId>image-editor-components</artifactId>
      <type>swc</type>
      <scope>runtime</scope>
    </dependency>

    <dependency>
      <groupId>com.coremedia.ui.sdk</groupId>
      <artifactId>external-preview-components</artifactId>
      <type>swc</type>
      <scope>runtime</scope>
    </dependency>

    <dependency>
      <groupId>com.coremedia.ui.sdk</groupId>
      <artifactId>content-hub-editor-components</artifactId>
      <type>swc</type>
      <scope>runtime</scope>
    </dependency>

    <dependency>
      <groupId>com.coremedia.ui.sdk</groupId>
      <artifactId>feedback-hub-editor-components</artifactId>
      <type>swc</type>
      <scope>runtime</scope>
    </dependency>

    <dependency>
      <groupId>com.coremedia.ui.sdk</groupId>
      <artifactId>usermanager-components</artifactId>
      <type>swc</type>
      <scope>runtime</scope>
    </dependency>

    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>blueprint-forms</artifactId>
      <version>${project.version}</version>
      <type>swc</type>
      <scope>runtime</scope>
    </dependency>

    <dependency>
      <groupId>com.coremedia.blueprint.base</groupId>
      <artifactId>bpbase-studio-components</artifactId>
      <type>swc</type>
      <scope>runtime</scope>
    </dependency>

    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>controlroom-studio-plugin</artifactId>
      <version>${project.version}</version>
      <type>swc</type>
      <scope>runtime</scope>
    </dependency>

    <dependency>
      <groupId>com.coremedia.blueprint.base</groupId>
      <artifactId>bpbase-notification-studio-plugin</artifactId>
      <type>swc</type>
      <scope>runtime</scope>
    </dependency>

    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>studio-client-extension-dependencies</artifactId>
      <version>${project.version}</version>
      <type>pom</type>
      <scope>runtime</scope>
    </dependency>


    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>blueprint-studio-theme</artifactId>
      <version>${project.version}</version>
      <type>swc</type>
      <scope>runtime</scope>
    </dependency>

    <dependency>
      <groupId>com.coremedia.sencha</groupId>
      <artifactId>ext-js-pkg</artifactId>
      <type>pkg</type>
      <scope>runtime</scope>
    </dependency>
  </dependencies>

  <build>
    <resources>
      <resource>
        <directory>.</directory>
        <targetPath>../app</targetPath>
        <includes>
          <include>app-manifest-fragment*.json</include>
        </includes>
      </resource>
    </resources>
    <plugins>
      <plugin>
        <groupId>net.jangaroo</groupId>
        <artifactId>jangaroo-maven-plugin</artifactId>
        <extensions>true</extensions>
        <configuration>
          <jooProxyPathSpec>/rest/*</jooProxyPathSpec>
          <theme>${project.groupId}:blueprint-studio-theme</theme>
          <applicationClass>com.coremedia.cms.editor.StudioApplication</applicationClass>
          <additionalLocales>
            <item>de</item>
            <item>ja</item>
          </additionalLocales>
          <senchaJvmArgs>${studio-base-app.senchaJvmArgs}</senchaJvmArgs>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
